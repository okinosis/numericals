import numpy

a = numpy.array([[3, -0.1, -0.2],[0.1, 7, -0.3],[0.3, -0.2, 10]])
b = numpy.array([[7.85],[-19.3],[71.4]])

a = numpy.append(a, [b[0],b[1],b[2]],1)

a[1] = a[1] - (a[1,0]/a[0,0])*a[0]
a[2] = a[2] - (a[2,0] / a[0,0])*a[0]
a[2] = a[2] - (a[2,1] / a[1,1])*a[1]

x3 = a[2,3]/a[2,2]
x2 = (a[1,3]-x3*a[1,2])/a[1,1]
x1 = (a[0,3]-x3*a[0,2]-x2*a[0,1])/a[0,0]

sol = numpy.array([[x1],[x2],[x3]])

print(sol)
